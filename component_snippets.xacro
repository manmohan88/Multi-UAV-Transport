				x="${body_width}" 
				y="${body_width}" 
				z="${body_height}" 
				mass="${mass_payload}"
				>
				<origin xyz="0 0 ${body_height/2}" rpy="0 0 0"/>
			</xacro:box_inertial>
	        <gravity value="1" />
	        <self_collide value="0" />
	        <kinematic value="0" />
	        <visual>
	          <origin xyz="0 0 ${body_height/2}" rpy="0 0 0"/>
