<!-- Macro to add a force sensor/torque sensor -->
	<xacro:macro name="force_torque_plugin_macro"
							 params="
							 namespace force_sensor_suffix parent_link mass_force_sensor measurement_delay noise parent_frame_id
							  *inertia *origin">
		<!-- force/torque sensor link -->
		<link name="${namespace}/force_sensor${force_sensor_suffix}_link">
			<!-- <pose>0 0 0 0 0 0</pose> -->
			<inertial>
				<xacro:insert_block name="inertia" />
				<mass value="${mass_force_sensor}" /> <!-- [kg] -->
				<origin xyz="0 0 0.05" rpy="0 0 0"/>
			</inertial>
			<visual name="visual_sphere">
        <geometry>
          <box size="0.2 .3 .1"/>
          <!-- <origin rpy="0 0 1.54" xyz="0 0 0.05"/> -->
	      </geometry>
	    </visual>
	    <collision name="collision_sphere">
	      <max_contacts>250</max_contacts>
	      <geometry>
	        <box>
	          <size>0.3 0.4 0.2</size>
	        </box>
	      </geometry>
	    </collision>
		</link>
		<!-- force/torque sensor joint -->
		<joint name="${namespace}/force_sensor${force_sensor_suffix}_joint" type="revolute">
			<parent link="${parent_link}"/>
			<!-- <parent>world</parent> -->
			<xacro:insert_block name="origin" />
			<!-- <child link="world"/> -->
			<child>${namespace}/force_sensor${force_sensor_suffix}_link</child>
			<pose>0 0 0.2 0 0 0</pose>
			<limit upper="10" lower="0" effort="0" velocity="0" />
		</joint>
		<gazebo reference="${namespace}/force_sensor${force_sensor_suffix}_joint">
			<sensor name="force_torque" type="force_torque">
	      		<update_rate>100.0</update_rate>
	      		<visualize>1</visualize>
				<always_on>1</always_on>
			</sensor>
		</gazebo>
	</xacro:macro>

