	        <collision>
	          <laser_retro value="0"/>
	          <max_contacts value="10" />
	          <origin xyz="0 0 ${body_height/2}" rpy="0 0 0"/>
	          <geometry>
	            <box size="${body_width} ${body_width} ${body_height}" />
	          </geometry>
	        </collision>
	    </link>
	</xacro:macro>
